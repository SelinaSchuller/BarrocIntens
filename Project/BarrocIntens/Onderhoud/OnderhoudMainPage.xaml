<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Onderhoud.OnderhoudMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Onderhoud"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#3e3e3e">
        <!-- Linker zijpaneel met logo en knoppen -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20">
            <!-- Logo -->
            <Image Source="assets/Logo6_groot.png" Width="100" Height="100" Margin="0,0,0,20"/>

            <!-- Knoppen -->
            <Button Content="Klant Gegevens" Width="150" Height="50" Background="Black" Foreground="Yellow" BorderBrush="Yellow" FontWeight="Bold" Margin="0,10"/>
            <Button Content="Planning" Width="150" Height="50" Background="Black" Foreground="Yellow" BorderBrush="Yellow" FontWeight="Bold" Margin="0,10"/>
        </StackPanel>

        <!-- Hoofd content in het midden -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="30">
            <!-- Kolom "Laatste onderhoud" -->
            <Border Width="200" Background="Black" CornerRadius="20,20,20,20" Padding="10" BorderBrush="Yellow" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="Laatste onderhoud" Foreground="Yellow" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Rectangle Fill="Yellow" Height="2" Margin="0,5"/>
                    <TextBlock Text="01/06/2024" Foreground="Yellow" FontSize="16" Margin="0,5"/>
                    <TextBlock Text=" 25/03/2024" Foreground="Yellow" FontSize="16" Margin="0,5"/>
                    <TextBlock Text=" 12/03/2024" Foreground="Yellow" FontSize="16" Margin="0,5"/>
                    <TextBlock Text=" 01/01/2024" Foreground="Yellow" FontSize="16" Margin="0,5"/>
                </StackPanel>
            </Border>

            <!-- Kolom "Storingen" -->
            <Border Width="200" Background="Black" CornerRadius="20,20,20,20" Padding="10" BorderBrush="Yellow" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="Storingen" Foreground="Yellow" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Rectangle Fill="Yellow" Height="2" Margin="0,5"/>
                    <TextBlock Text=" 08/10/2024" Foreground="Yellow" FontSize="16" Margin="0,5"/>
                    <TextBlock Text=" Yesterday" Foreground="Yellow" FontSize="16" Margin="0,5"/>
                    <TextBlock Text=" Today" Foreground="Yellow" FontSize="16" Margin="0,5"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Titel bovenaan -->
        <TextBlock Text="Onderhoud" Foreground="Yellow" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
    </Grid>
</Page>
